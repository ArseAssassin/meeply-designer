.element-view
    position absolute
    top 0
    left 0
    right 0
    bottom 0

    display flex
    flex-direction row

.element-view .element
    background-color $grey
    cursor default

    &.element--document-mode
        cursor grab

    &.element--grabbing
        cursor move

.element-view__canvas
    fill $white
    stroke darken($grey, 15%)
    stroke-width 1px

.element-view__toolbar
    border-left 1px solid $grey
    flex 0 0 270px
    width 270px

.element-view__deck
    position relative

    border-right 1px solid darken($grey, 5%)
    border-top 1px solid $grey
    width 0px

    .element-view__cards
        height 100%
        overflow auto

    > button
        outline none

    > .group
        visibility hidden

.element-view__deck--shown
    width 300px

    > .group
        visibility visible

.element-view__tab
    padding-asym--s()

    position absolute
    right 0
    top 0
    transform rotate(-90deg)
    transform-origin top right
    border 0
    background-color $white

.element-view__toolbar-panel
    padding--m()

    border-top 1px solid $grey

.element-view__tools
    border-right 1px solid $grey
    height 100%

.element-view__tool
    padding--s()

    border 0
    background-color $white
    border 1px solid transparent
    border-left 0
    border-top 0

    outline none
    cursor pointer

    &:not([disabled]):hover
        border-color $grey


.element-view__tool--selected
    background-color $grey
    border 1px solid $white
    border-right 0
    border-bottom 0

    &:hover
        border-color $white

.element-view__layer
    margin-negative-h--m()
    padding-h--m()
    padding-v--s()

    display block
    border 0
    background-color transparent
    width 100%
    text-align left

.element-view__layer--selected
    background-color $grey

.element-view__size-indicator
    fill transparent

.element-view__svg-layer--selected .element-view__size-indicator
    pointer-events auto
    cursor grab

.element-view__svg-layer--selected .element-view__size-indicator--moving
    cursor move

.element-view__resize-indicator
    visibility hidden
    fill $light-blue
    stroke $mid-blue
    stroke-width .5px


.element-view__resize-indicator--nwse
    cursor nwse-resize

.element-view__resize-indicator--nesw
    cursor nesw-resize

.element-view__svg-layer--selected .element-view__resize-indicator
    visibility visible

.element-view__svg-layer--selected .element-view__size-indicator
    stroke-width 4px
    stroke-dasharray 5
    stroke $light-blue
    fill transparent

.element-view__svg-layer--selected.element-view__svg-layer--locked .element-view__resize-indicator
    visibility hidden

.element-view__svg-layer--selected.element-view__svg-layer--locked .element-view__size-indicator
    stroke darken($grey, 25%)

.element-view__svg-layer
    user-select none

.element-view__add-layer
    background-color transparent
    border 0
    cursor pointer

    outline none

.element-view__layer-form
    height 400px
    overflow-y auto
