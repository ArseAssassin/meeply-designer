.print__tools
    padding--m()
    text-align center

.print
    position relative

.print__guide
    fill none
    stroke $black
    stroke-width 1px

.print__page
    display block
    margin 0 auto 10px
    border 1px solid darken($grey, 15%)

.print__selector .file-explorer__file-face svg
    width 150px
    height 100%

@media print
    .print--a4 .print__page
        width 210mm
        height 297mm

    .print--ansi_letter .print__page
        width 215.9mm
        height 279.4mm

    .print__page
        border 0
        margin 0

    .design-view__toolbar
        display none

    .tab-bar__tabs
        display none

    .design-view > .tab-bar
        margin-top 0 !important

    .tab-bar__body
        padding 0

    .print__tools
        display none

    #root
        position static
