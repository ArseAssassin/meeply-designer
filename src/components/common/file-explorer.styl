.file-explorer
    user-select none

.file-explorer__items
    display flex
    flex-direction row
    flex-wrap wrap
    overflow auto

.file-explorer__breadcrumbs
    display flex
    flex-direction row
    align-items center
    background-color $mid-blue
    border 1px solid $mid-blue
    overflow auto

.file-explorer__breadcrumb
    padding-asym--m()

    border 0
    background-color $dark-blue
    color $white
    display block
    cursor pointer
    box-shadow 1px 1px 5px rgba(0, 0, 0, .5)

    &:last-child
        background-color $light-blue
        color $dark-blue

.file-explorer__arrow
    margin 0 $base-s
    color $white

.file-explorer__file
    height 100%

.file-explorer__file-wrapper
    padding--s()

    border 1px solid transparent
    margin $base-s

.file-explorer--icon-xs .file-explorer__file-wrapper
    width 70px
    margin $base-xs

.file-explorer__file-wrapper--selected
    background-color $light-blue
    border-color $mid-blue

.file-explorer__file-face
    width 100%
    height 100%
    overflow hidden

    .icon svg
        width 100%

.file-explorer__file-name
    text-align center
    overflow hidden
